<div class="row">
  <div class="col-9">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th scope="col">Email</th>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">No of Stocks</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @friends.each do |friend| %>
          <tr>
            <td> <%= friend.email %> </td>
            <th scope="row"> <%= friend.first_name %> </th>
            <th scope="row"> <%= friend.last_name %> </th>
            <td> <%= friend.stocks.count %> </td>
            <td>
              <%= link_to 'View Profile', user_path(friend),
            class: "btn btn-sm btn-success" %>
              &nbsp;
              <%= link_to 'Unfollow', friendship_path(friend), 
            method: :delete, data: { confirm: 'Are you sure?' },
            class: "btn btn-sm btn-warning" %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
